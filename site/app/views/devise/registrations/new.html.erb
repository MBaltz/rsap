<h2>Registro</h2>

<!-- :novalidate => 'novalidate serve pra o browser nao validar os campos -->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, :novalidate => 'novalidate'}) do |f| %>

  <%= devise_error_messages! %>

  <div class="field">
     <%= f.label :nome %><br/>
     <%= f.text_field :nome, autofocus: true, autocomplete: "name" %>
  </div> <br/>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
  </div> <br/>

  <div class="field">
    <%= f.label :senha %><br/>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div> <br/>

  <div class="field">
    <%= f.label :confirme_a_senha %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div> <br/>

  <div class="field">
     <%= f.label :descricao %><br/>
     <%= f.text_field :descricao, autofocus: true %>
  </div> <br/>

  <!-- Upload de imagem -->
  <div class="field">
      <%= f.label :foto %> <br/>
      <%= f.file_field :avatar %>
  </div

  <div class="actions">
     <br>
    <%= f.submit "Registrar" %>
  </div> <br/>

<% end %>

<br>
<%= render "devise/shared/links" %>
