<h1>Grupos</h1>

<table>

  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	  <%if @grupos.count > 0%>
	    <% @grupos.each do |grupo| %>
      <tr>

		<th>Nome:</th>
        <td><%= grupo.nome %></td>
		 <th>Descricao:</th>
        <td><%= grupo.descricao %></td> <th> | </th>
        <td><%= link_to 'Ver', "/grupos/#{grupo.id}" %></td>

      </tr>
    <% end %>
	<%else%>
		<p>Você não participa de nenhum grupo!</p>
	<%end%>

  </tbody>
</table>

<br>

<%= link_to 'Novo Grupo', '/grupos/new' %>
